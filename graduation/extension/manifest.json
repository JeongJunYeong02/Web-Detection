{
  "manifest_version": 3,
  "name": "Web Forgery Detector",
  "version": "1.0",
  "description": "웹사이트 위변조 탐지 확장 프로그램",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:5010/*",
    "http://127.0.0.1:5050/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icon.png"
  }
}
